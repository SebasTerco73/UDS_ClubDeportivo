<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pagar_actividad_no_socio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".PagarActividadNoSocioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOCUMENTO NO SOCIO"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/tv_documento_no_socio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00000000"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/edittext_rounded"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_buscar_no_socio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUSCAR"
            android:backgroundTint="#409ADB"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago Por Actividad Diaria"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FECHA DE PAGO"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/txt_fecha_pago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edittext_rounded"
                android:inputType="datetime|date"
                android:padding="12dp"
                android:text="Fecha"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Seleccionar fecha"
                android:src="@drawable/calendario" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de actividades"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>

        <Spinner
            android:id="@+id/spinner_actividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/grisclaro"
            android:entries="@array/actividades_del_club"
            android:overlapAnchor="false"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:popupBackground="@android:color/white"
            tools:listitem="@android:layout/simple_spinner_dropdown_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CUPO\nDISPONIBLE"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/tv_cupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:minWidth="60dp"
                android:background="@drawable/edittext_rounded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="48dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PRECIO"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/tv_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 5000"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:minWidth="100dp"
                android:background="@drawable/edittext_rounded"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/btn_volver_ns"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VOLVER"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:backgroundTint="#409ADB"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_limpiar_ns"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LIMPIAR"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:backgroundTint="#409ADB"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/btn_confirmar_ns"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="ACEPTAR"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:backgroundTint="#409ADB"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
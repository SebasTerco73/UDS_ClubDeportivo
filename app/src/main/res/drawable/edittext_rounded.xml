<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado enfocado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/editText"/> <!-- fondo gris oscuro -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- borde blanco al enfocar -->
            <corners android:radius="24dp"/> <!-- esquinas más redondeadas -->
            <padding android:left="16dp" android:top="12dp"
                android:right="16dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/editText"/> <!-- mismo gris de fondo -->
             <!-- <stroke android:width="2dp" android:color="#888888"/> borde gris más claro -->
            <corners android:radius="24dp"/>
            <padding android:left="16dp" android:top="12dp"
                android:right="16dp" android:bottom="12dp"/>
        </shape>
    </item>

</selector>